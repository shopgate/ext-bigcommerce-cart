{
  "name": "@shopgate/bigcommerce-cart",
  "version": "1.0.0",
  "description": "Shopgate Cloud BigCommerce Cart",
  "scripts": {
    "precommit": "npm run test && npm run lint-staged",
    "test": "_mocha --use_strict --require ./test/setupBackend.js --recursive ./test/unit",
    "testIntegration": "_mocha --use_strict --timeout 4000 --require ./test/setupBackend.js --recursive ./test/integration",
    "lint": "standard",
    "lint-staged": "lint-staged",
    "check": "nsp check",
    "cover": "nyc _mocha --require ./test/setupBackend.js --recursive ./test/unit",
    "coverIntegration": "nyc _mocha --use_strict --timeout 4000 --require ./test/setupBackend.js --recursive ./test/integration",
    "coverAll": "nyc _mocha --use_strict --timeout 4000 --require ./test/setupBackend.js --recursive ./test/integration --recursive ./test/unit"
  },
  "lint-staged": {
    "*.js": "npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shopgate/ext-bigcommerce-cart.git"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "node-bigcommerce": "^3.0.0",
    "jwt-simple": "^0.5.1"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.4",
    "@types/chai": "^4.1.3",
    "@types/chai-as-promised": "^7.1.0",
    "@types/mocha": "^5.2.0",
    "@types/sinon": "^4.3.1",
    "bunyan": "^1.8.12",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "chai-subset": "^1.6.0",
    "eslint": "^3.19.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-chai": "0.0.1",
    "eslint-plugin-chai-expect": "^1.1.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "husky": "^0.14.3",
    "lint-staged": "^6.0.0",
    "mocha": "^3.2.0",
    "nock": "^9.0.13",
    "nsp": "^3.1.0",
    "nyc": "^11.3.0",
    "request": "^2.83.0",
    "sinon": "^4.1.2",
    "standard": "^10.0.3"
  },
  "standard": {
    "env": {
      "mocha": true,
      "chai": true,
      "sinon": true
    }
  }
}
