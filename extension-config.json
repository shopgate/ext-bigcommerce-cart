{
  "version": "1.4.0",
  "id": "@shopgate/bigcommerce-cart",
  "configuration": {
    "storeHash" : {
      "type" : "bigApi",
      "destination" : "backend",
      "default": null,
      "params": {
        "method":  "GET",
        "service": "config",
        "path": "/v1/shop/%(shopId)s/bigcommerce_api_credentials?parsed=true",
        "key": "value.storeHash"
      }
    },
    "accessToken" : {
      "type" : "bigApi",
      "destination" : "backend",
      "default": null,
      "params": {
        "method":  "GET",
        "service": "config",
        "path": "/v1/shop/%(shopId)s/bigcommerce_api_credentials?parsed=true",
        "key": "value.accessToken"
      }
    },
    "clientId": {
      "type" : "bigApi",
      "destination" : "backend",
      "default": null,
      "params": {
        "method":  "GET",
        "service": "config",
        "path": "/v1/shop/%(shopId)s/bigcommerce_api_credentials?parsed=true",
        "key": "value.clientId"
      }
    },
    "clientSecret": {
      "type" : "bigApi",
      "destination" : "backend",
      "default": null,
      "params": {
        "method":  "GET",
        "service": "config",
        "path": "/v1/shop/%(shopId)s/bigcommerce_api_credentials?parsed=true",
        "key": "value.clientSecret"
      }
    },
    "requestTimeout": {
      "type": "static",
      "destination": "backend",
      "params": {
        "value": "15000"
      }
    }
  },
  "components": [
    {
      "id": "CheckoutSubscription",
      "path": "frontend/Checkout/subscribers.js",
      "type": "subscribers"
    },
    {
      "id": "Loader",
      "type": "portals",
      "path": "frontend/portals/Loader",
      "target": "cart.item-list.before"
    }
  ]
}
